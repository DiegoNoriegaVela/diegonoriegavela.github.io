/**
 * Crea un archivo temporal con nombre basado en prefijo + timestamp
 * 
 * Formato: {prefix}_YYYYMMDDHHMMSS.ipm
 * Ejemplo: R11902840_20260116114719.ipm
 * 
 * @param prefix Prefijo del nombre (ej: "R11902840", "T112")
 * @return File objeto apuntando al archivo temporal creado
 * @throws IOException Si ocurre error al crear el archivo
 */
private static File createTempFile(String prefix) throws IOException {
    // Generar timestamp: YYYYMMDDHHMMSS
    SimpleDateFormat sdf = new SimpleDateFormat("yyyyMMddHHmmss");
    String timestamp = sdf.format(new Date());
    
    // Construir nombre: prefix_timestamp.ipm
    String fileName = prefix + "_" + timestamp + ".ipm";
    
    // Crear archivo en directorio actual
    File tempFile = new File(fileName);
    
    if (DEBUG) {
        System.out.println("DEBUG: Archivo temporal creado: " + tempFile.getAbsolutePath());
    }
    
    return tempFile;
}
